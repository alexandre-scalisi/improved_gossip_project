<div class="container-fluid">
  <h1>Form for creating new user</h1>
  <%= form_tag url_for(action: 'create'), method: "post" do %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= label_tag 'First Name : ' %><br />
  <%= text_field_tag 'first_name' %>
  <br /> <br />

  <%= label_tag 'Last Name : ' %><br />
  <%= text_field_tag 'last_name'%>
  <br /> <br />

  <%= label_tag 'Description : ' %><br />
  <%= text_area_tag 'description',nil, :rows => 3, :cols => 50 %>
  <br /> <br />

  <%= label_tag 'Email : ' %><br />
  <%= text_field_tag 'email' %>
  <br /> <br />

  <%= label_tag 'Age : ' %><br />
  <%= text_field_tag 'age' %>
  <br /> <br />

  <%= select_tag "zip_code", options_from_collection_for_select(@cities.sort_by(&:name),"zip_code","name"), prompt: "Select your city" %>
  <br /> <br />

  <%= label_tag 'Password : ' %><br />
  <%= password_field_tag 'password'%>
  <br /> <br />
  <%= submit_tag "Sign in" %>
  
  <% end %>
</div>
